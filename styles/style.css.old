    .logo{position:absolute;
        display:none;
    }
    
    .formulario-busqueda{
        /* margin-bottom:2em; */ /*resolver de otra forma*/
        width: 100%;
        flex: 1 1 70%;
    }
    /* .enlaces{display:none} y agregar hamburguesa*/


}
.total-container{
    background-color: #222;
    width: 100%;
    box-sizing: border-box;
    color: #eee;
    font-family: 'Roboto', sans-serif ;
}

h2{
    /* color: #0B2447; */
}
/* CSS HEADER */

.cabecera{
    width:100%;
    display:flex;
    flex-wrap:wrap;                 
    align-items: center;                         
    height: 10em;
    background-color: black;;
}
.boton-home .logo{
    margin: 1.8em 0 0 1.7em;
    height: 5em;
}
/* FALTA RELATIVIZAR ALGUNAS MEDIDAS */

.formulario-busqueda{
    justify-self: left;
    align-self: center;
    margin: 1.2em 2em 0 2em;
    height: 1.5em;
    width: 45%;
    border-radius: 9px;
    border-color: black;
    color: black;
}

.formulario-busqueda .busqueda{
    height: 1.5em;
    width: 100%;
    border-radius: 9px;
    border-color: black;
    color: black;
}


.busqueda:hover, .busqueda:focus{
    transition:ease-in-out;
    transition-duration:500ms;
    border: 3.5px solid black;
}

::placeholder{color:#484a4c}

.enlaces{
    margin-left: 0em;
}
.enlaces a{
    color: gray;
    text-decoration: none;
}
.enlaces a:link{
    color: gray;
}
.enlaces a:visited{
    color:rgb(150, 117, 34);
}

.enlaces li{
    font-size: 1.5em;
    display: inline;
    margin: 0 10px;
}


/* CSS MAIN */
.titulo{
    text-align: center;
    font-size: 2em;
}

.titulares{
    margin: 2em 0;
    display: flex ;
    justify-content: center;
    flex-wrap: wrap;
}
.game-hightlight{
    flex: 1 5 33%;
}
.portada-highlight{
    margin: 1em 0;
    height: 15em;
    width: 90%;
}/* FALTA HOVER CON ZOOM,SOMBRA O ALGUNA ANIMACION */

.barra-separadora{
    border: 2px inset #222; height: 1px; width: 80%; margin: auto;
}

.grid-container{
    display: grid;
    width: 90%;
    margin: 1em auto;
    gap: 1em;
    grid-template-columns: repeat(3,1fr);
    grid-template-rows: repeat(3,auto);
}
.grid-container .titulo{
    grid-column: 1 / 4;
}
.grid-item{
    border-radius: 0.1em;
    text-align: center;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}





/* CSS FOOTER */

.pie{
    display: flex;
    height: 8vh;
    background-color: #f1d767;
    justify-content: space-around;
    align-items: center;
}
.copyright{
    color:#222;
}
.redes{
    text-align: end;
    filter: drop-shadow(1px 1px 5px var(--color-secundario));

}








